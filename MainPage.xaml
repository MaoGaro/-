<Page x:Class="Прокат.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Прокат"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Background="White">
        
        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden"></Frame>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="135" Margin="0" Width="172" >
        <Label Content="Логин" HorizontalAlignment="Center" FontFamily="Comic Sans MS"></Label>
        <TextBox x:Name="loginBox" FontFamily="Comic Sans MS"></TextBox>
        <Label Content="Пароль" HorizontalAlignment="Center" FontFamily="Comic Sans MS"/>
        <TextBox x:Name="passwordBox" FontFamily="Comic Sans MS"></TextBox>
        <Button x:Name="enterButton" Content="Вход" Click="EnterButtonClick" FontFamily="Comic Sans MS" BorderBrush="#FF76E383" Background="#FF76E386"/>
        </StackPanel>
    </Grid>
</Page>
